
@model IEnumerable<Pozoriste.EntityModels.Sala>
@{
    ViewData["Title"] = "Prikazi";
    Layout = "_Layout";
}

<h2 style="text-align: center; font-style:italic;">Sale</h2>
<br />
<br />
<br />

<table id="table_id" class="row-border" style="width:100%">
    <thead>
        <tr>
            <th>Naziv </th>
            <th>Kapacitet </th>
            <th>Klimatizacija  </th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.Naziv</td>
                <td>@x.Kapacitet</td>
                <td>@x.Klimatizacija</td>

                <td>
                    <span id="confirmDeleteSpan_@x.SalaID" style="display:none">
                        <span>Da li ste sigurni da želite obrisati? </span>
                        <a asp-action="Obrisi" asp-route-id="@x.SalaID" class="btn btn-outline-danger">DA</a>
                        <a href="#" class="btn btn-outline-primary"
                           onclick="confirmDelete('@x.SalaID', false)">NE</a>
                    </span>

                    <span id="deleteSpan_@x.SalaID">
                        <a href="#" class="btn btn-outline-danger"
                           onclick="confirmDelete('@x.SalaID', true)"><i class="far fa-trash-alt"></i> Obriši</a>
                    </span>
                    <a class="btn btn-outline-primary" asp-action="Uredi" asp-route-id="@x.SalaID"><i class="fas fa-edit"></i>  Uredi</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<head>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
    <script src="~/js/delete.js"></script>
    <link rel="stylesheet" href="~/css/dataTable.css">
    <script src="~/js/dataTable.js"></script>
    <script src="~/js/DataTableBosanskiJezik.js"></script>

</head>

