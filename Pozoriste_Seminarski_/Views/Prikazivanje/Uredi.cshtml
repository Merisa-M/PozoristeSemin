@model PrikazivanjeUrediVM
@{
    ViewData["Title"] = "UrediForm";
}
<h2 class="naslov">Uredi prikazivanje</h2>
<br />
<div class="okvir">
    <form asp-action="UrediSnimi" method="post">
        <input type="hidden" asp-for="PrikazivanjeID" />

        <div class="form-group">
            <label class="label">Datum prikazivanja</label>
            <input class="form-control" asp-for="datumPrikazivanja" id="input" />
        </div>

        <div class="form-group">
            <label class="label">Cijena </label>
            <input class="form-control" asp-for="Cijena" id="input" />
        </div>



        <div class="form-group">
            <label class="label">Predstava</label>
            <select class="form-control" asp-for="predstavaid" asp-items="Model.Predstava" id="input"></select>
        </div>

        <div class="form-group">
            <label class="label">Sala</label>
            <select class="form-control" asp-for="salaid" asp-items="Model.Sala" id="input"></select>
        </div>

        <input type="submit" value="Sačuvaj" class="btn btn-outline-danger" id="snimi" />
    </form>
    <br /><br />
    <a href="/Prikazivanje/Prikazi" class="btn btn-outline-warning"><i class="fas fa-arrow-circle-left"></i>  Nazad</a>


</div>

<head>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/DodajForm.css">

</head>

