

@model PrikazivanjePrikaziVM
@{
    ViewData["title"] = "Prikazi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align: center; font-style:italic;">Prikazivanja</h2>
<br />
<br />

<table id="table_id" class="row-border" style="width:100%">
    <thead>
        <tr>
            <th>Predstava </th>
            <th>Sala </th>
            <th>Datum prikazivanja</th>
            <th>Cijena (KM) </th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model.lista)
        {
            <tr>
                <td>@x.Predstave</td>
                <td>@x.Sale</td>
                <td>@x.DatumPrikazivanja</td>
                <td>@x.Cijena</td>
                <td>
                    <span id="confirmDeleteSpan_@x.PrikazivanjeID" style="display:none">
                        <span>Da li ste sigurni da želite obrisati? </span>
                        <a asp-action="Obrisi" asp-route-id="@x.PrikazivanjeID" class="btn btn-outline-danger">DA</a>
                        <a href="#" class="btn btn-outline-primary"
                           onclick="confirmDelete('@x.PrikazivanjeID', false)">NE</a>
                    </span>

                    <span id="deleteSpan_@x.PrikazivanjeID">
                        <a href="#" class="btn btn-outline-danger"
                           onclick="confirmDelete('@x.PrikazivanjeID', true)"><i class="far fa-trash-alt"></i> Obriši</a>
                    </span>

                    <a class="btn btn-outline-primary" asp-action="Uredi" asp-route-id="@x.PrikazivanjeID"><i class="fas fa-edit"></i>  Uredi</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<head>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
    <script src="~/js/delete.js"></script>
    <link rel="stylesheet" href="~/css/dataTable.css">
    <script src="~/js/dataTable.js"></script>
    <script src="~/js/DataTableBosanskiJezik.js"></script>
</head>
<br />
<br />
<br />
<a class="btn btn-outline-info" href="/Home/Index"><i class="fas fa-home"></i>  Početna</a>
