@model KomentarPrikaziVM

@{
    ViewData["Title"] = "Prikazi";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h2 style="text-align: center; font-style:italic;">Komentari </h2>
<br />
<br />


<table id="table_id" class="row-border" style="width:100%">
    <thead>
        <tr>
            <th>Sadržaj </th>
            <th>Predstava </th>
            <th>Kupac</th>
            <th>Vrijeme kreiranja</th>
            <th>Odobren</th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model.lista)
        {

            <tr>
                <td>@x.Sadrzaj</td>
                <td>@x.predstava</td>
                <td>@x.kupac</td>
                <td>@x.VrijemeKreiranja</td>

                @if (x.Odobren)
                {
                    <td>DA</td>
                    <td>
                        <span id="confirmDeleteSpan_@x.Id" style="display:none">
                            <span>Da li ste sigurni da želite obrisati? </span>
                            <a asp-action="Obrisi" asp-route-id="@x.Id" class="btn btn-danger">DA</a>
                            <a href="#" class="btn btn-primary"
                               onclick="confirmDelete('@x.Id', false)">NE</a>
                        </span>

                        <span id="deleteSpan_@x.Id">
                            <a href="#" class="btn btn-danger"
                               onclick="confirmDelete('@x.Id', true)"> <i class="far fa-trash-alt"></i> Obriši</a>
                        </span>
                    </td>
                }
                else
                {
                    <td>NE</td>
                    <td>
                        <span id="confirmDeleteSpan_@x.Id" style="display:none">
                            <span>Da li ste sigurni da želite obrisati? </span>
                            <a asp-action="Obrisi" asp-route-id="@x.Id" class="btn btn-outline-danger">DA</a>
                            <a href="#" class="btn btn-outline-primary"
                               onclick="confirmDelete('@x.Id', false)">NE</a>
                        </span>
                        <span id="deleteSpan_@x.Id">
                            <a href="#" class="btn btn-outline-danger"
                               onclick="confirmDelete('@x.Id', true)"> <i class="far fa-trash-alt"></i> Obriši</a>
                        </span>
                        <a class="btn btn-outline-success" asp-action="Odobri" asp-route-id="@x.Id"><i class="fas fa-check-circle"></i>  Odobri</a>
                    </td>
                }

            </tr>
        }
    </tbody>
</table>
<head>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
    <script src="~/js/delete.js"></script>
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/dataTable.css">
    <script src="~/js/dataTable.js"></script>
    <script src="~/js/DataTableBosanskiJezik.js"></script>
</head>
