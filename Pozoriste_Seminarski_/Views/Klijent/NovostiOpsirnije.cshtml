
@model NovostiPrikaziVM

@{
    ViewData["Title"] = "NovostiOpsirnije";
    Layout = "~/Views/Shared/_LayoutKlijent.cshtml";
}

<br />



<body style="background-color:whitesmoke">

    <div style="width:100%;">
        @foreach (var x in Model.lista)
        {
            var photoPath = "~/images/" + (x.adresaaSlike ?? "no-image.png");


            <div style="font-size:38px;font-style:italic; font-weight: bold;width:60%;text-align:center; margin-left:10%;margin-bottom:2%;margin-top:2%">
                @x.Naziv
            </div>
            <div style="font-size:18px; margin-left:7%;margin-bottom:1%;margin-top:1%">
                Datum / Vrijeme objave: @x.DatumVrijemeObjave
            </div>
            <div>
                <img class="card-img-top imageThumbnail" src="@photoPath"
                     asp-append-version="true" style="height:1%;width:50%;cursor:pointer; margin-left:12%" />

            </div>
            <br /><br />
            <div style="font-size:18px; margin-left:6%;margin-bottom:1%;margin-top:1%;width:65%">
                @x.Tekst
            </div>
            <br /><br />
            <div>
                <a class="btn btn-outline-info" asp-action="Novosti"
                   style=" margin-left:6%;width:10%"> <i class="fas fa-arrow-circle-left"></i> Nazad</a>
            </div>
        }
    </div>
</body>

<head>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
</head>


<script type="text/javascript">

    function uvecaj(xyz) {
        xyz.style.width = "380px";
        xyz.style.height = "320px";
        xyz.style.border = "3px solid #003bff"
        xyz.style.borderRadius = "10px"
        xyz.style.transition = "2s"
    }
    function smanji(xyz) {
        xyz.style.width = "180px";
        xyz.style.height = "180px";
        xyz.style.border = "0px solid #003bff"
        xyz.style.borderRadius = "0px"
        xyz.style.transition = "0.5s"
    }
</script>
