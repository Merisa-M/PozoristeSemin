
@model PrikazivanjePrikaziVM
@{
    ViewData["title"] = "Prikazi";
    Layout = "~/Views/Shared/_LayoutKlijent.cshtml";

}
<br />
<h2 style="text-align:center; font-family: 'Julius Sans One';font-size: 40px; font-weight:bold">@Model.predstava</h2>

<br />
<head>
    <link href='https://fonts.googleapis.com/css?family=Julius Sans One' rel='stylesheet'>


</head>

<input type="hidden" asp-for="predstavaID" />


<br />
<body style="background-color:whitesmoke;">
    <div style="width:90%;margin-left:5%; font-size: 18px;">
        <p>@Model.opis</p>
    </div>

    @*<a ajax-poziv="da" ajax-rezultat="ajaxDiv" class="btn btn-light" asp-action="Detalji" asp-route-id="@Model.predstavaID" style="margin-left:10%"><i class="fas fa-person-booth"></i> Lista glumaca</a>*@

    <br />
    <br />
    <br />
    <table class="table" style="width:90%;margin-left:5%">
        <thead>
            <tr>
                <th>Sala </th>
                <th>Datum prikazivanja</th>
                <th>Cijena (KM)</th>
                <th> </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model.lista)
            {
                <tr>
                    <td>@x.Sale</td>
                    <td>@x.DatumPrikazivanja</td>
                    <td>@x.Cijena</td>
                    <td>
                        <a class="btn btn-outline-danger" asp-action="Rezervacija" asp-route-id="@x.PrikazivanjeID"><i class="fas fa-check"></i>   Rezervacija</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <br /><br />
    <div>
        <a class="btn btn-outline-info" asp-action="Predstava"
           style=" margin-left:6%;width:10%"> <i class="fas fa-arrow-circle-left"></i> Nazad</a>
    </div>

</body>
<head>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
</head>


