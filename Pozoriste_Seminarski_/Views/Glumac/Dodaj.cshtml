@model GlumacDodajVM
@{
    ViewData["Title"] = "Dodaj";
}

<head>
    <link rel="stylesheet" href="~/css/do.css">

        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
</head>

<body style="background-color:whitesmoke">

    <h2 class="naslov">Dodaj glumca</h2>
    <br /><br />

    <div class="okvir">

        <form asp-action="Snimi" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Glumac.GlumacID" />

            <div class="form-group">
                <label class="label">Ime </label>
                <input asp-for="Glumac.Ime" id="input" class="form-control" required="" oninvalid="this.setCustomValidity('Ime je obavezno polje')"
                       oninput="setCustomValidity('')" />
                <span asp-validation-for="Glumac.Ime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="label">Prezime </label>
                <input asp-for="Glumac.Prezime" id="input" class="form-control" required="" oninvalid="this.setCustomValidity('Prezime je obavezno polje')"
                       oninput="setCustomValidity('')" />
                <span asp-validation-for="Glumac.Prezime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="label">Broj ugovora </label>
                <input asp-for="Glumac.BrojUgovora" id="input" class="form-control" required="" oninvalid="this.setCustomValidity('Broj ugovora je obavezno polje')"
                       oninput="setCustomValidity('')" />
                <span asp-validation-for="Glumac.BrojUgovora" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="label">Datum  rodjenja </label>
                <input asp-for="Glumac.DatumRodjenja" id="input" class="form-control" required="" oninvalid="this.setCustomValidity('Datum rodjenja je obavezno polje')"
                       oninput="setCustomValidity('')" />
                <span asp-validation-for="Glumac.DatumRodjenja" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="label">Email  </label>
                <input asp-for="Glumac.Email" id="input" class="form-control" required="" oninvalid="this.setCustomValidity('Email je obavezno polje')"
                       oninput="setCustomValidity('')" />
                <span asp-validation-for="Glumac.Email" class="text-danger"></span>
            </div>

            <div class="form-group " style="margin-left:5%">
                <label asp-for="Photo"></label>
                <div class="col-sm-10">
                    <div class="custom-file">
                        <input asp-for="Photo" class="form-control custom-file-input">
                        <label class="custom-file-label">Choose File...</label>
                    </div>
                </div>
            </div>
            <input type="submit" value="Snimi" class="btn btn-outline-danger" id="snimi" />
        </form>
    </div>
</body>

