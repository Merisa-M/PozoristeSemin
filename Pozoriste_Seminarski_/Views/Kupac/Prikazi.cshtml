@using Pozoriste_Seminarski_.Models
@model IEnumerable<KupacPrikaziVM.Row>
@{
    ViewData["title"] = "Prikazi";
    Layout = "_Layout";
}

<h2 style="text-align: center; font-style:italic; ">Kupci</h2>
<br />
<br />

<table id="table_id" class="row-border" style="width:100%">
    <thead>
        <tr>
            <th>Ime</th>
            <th>Prezime</th>
            <th>Grad</th>
            <th>Broj telefona</th>
            <th>Email</th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.Ime</td>
                <td>@x.Prezime</td>
                <td>@x.NazivGrada</td>
                <td>@x.BrojTelefona</td>
                <td>@x.Email</td>
               
                <td>
                    <span id="confirmDeleteSpan_@x.KupacID" style="display:none">
                        <span>Da li ste sigurni da želite obrisati? </span>
                        <a asp-action="Obrisi" asp-route-id="@x.KupacID" class="btn btn-outline-danger">DA</a>
                        <a href="#" class="btn btn-outline-primary"
                           onclick="confirmDelete('@x.KupacID', false)">NE</a>
                    </span>

                    <span id="deleteSpan_@x.KupacID">
                        <a href="#" class="btn btn-outline-danger"
                           onclick="confirmDelete('@x.KupacID', true)"><i class="far fa-trash-alt"></i> Obriši</a>
                    </span>
                    <a class="btn btn-outline-primary" asp-action="Uredi" asp-route-id="@x.KupacID"><i class="fas fa-edit"></i>  Uredi</a>

                </td>
            </tr>
        }
    </tbody>

</table>

<head>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
    <script src="~/js/delete.js"></script>
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/dataTable.css">
    <script src="~/js/dataTable.js"></script>
    <script src="~/js/DataTableBosanskiJezik.js"></script>
</head>

