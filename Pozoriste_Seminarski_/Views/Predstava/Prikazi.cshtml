
@using Pozoriste_Seminarski_.Models
@model IEnumerable<PredstavaPrikaziVM.Row>

@{
    ViewData["title"] = "Prikazi";

    Layout = "_Layout";
    //  int brojacStranica = (int)TempData["trenutna"];

}

<h2 style="text-align: center; font-style:italic;"> Predstave </h2>
<br />
<br />

<table id="table_id" class="row-border" style="width:100%">
    <thead>
        <tr>
            <th>Naziv </th>
            <th>Opis </th>
            <th>Režiser </th>
            <th>Trajanje </th>
            <th>Žanr </th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.Naziv</td>
                <td style="width:34%">@x.Opis</td>
                <td>@x.Reziser</td>
                <td>@x.Trajanje</td>
                <td>@x.NazivZanra</td>
                <td>
                    <span id="confirmDeleteSpan_@x.PredstavaID" style="display:none">
                        <span>Da li ste sigurni da želite obrisati? </span>
                        <a asp-action="Obrisi" asp-route-id="@x.PredstavaID" class="btn btn-outline-danger">DA</a>
                        <a href="#" class="btn btn-outline-primary"
                           onclick="confirmDelete('@x.PredstavaID', false)">NE</a>
                    </span>

                    <span id="deleteSpan_@x.PredstavaID">
                        <a href="#" class="btn btn-outline-danger"
                           onclick="confirmDelete('@x.PredstavaID', true)"><i class="far fa-trash-alt"></i> Obriši</a>
                    </span>

                    <a class="btn btn-outline-primary" asp-action="Uredi" asp-route-id="@x.PredstavaID"><i class="fas fa-edit"></i>  Uredi</a>
                    <a ajax-poziv="da" ajax-rezultat="ajaxDiv" class="btn btn-outline-light" asp-action="Detalji" asp-route-id="@x.PredstavaID"><i class=" btn-user"></i> Lista glumaca</a>
                </td>
            </tr>
        }
    </tbody>
</table>


<head>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
    <script src="~/js/delete.js"></script>
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/dataTable.css">
    <script src="~/js/dataTable.js"></script>
    <script src="~/js/DataTableBosanskiJezik.js"></script>

</head>
